$ADFBIN/adf<<eor

TITLE  RC=H

XC
  GGA OPBE
END

RELATIVISTIC SCALAR ZORA
BECKEGRID
  Quality VeryGood
END

BASIS
TYPE TZ2P
Core Small
END

SCF
ITERATIONS 999
CONVERGE 0.00001
MIXING 0.20
END

Geometry
 IRC Backward POINTS=30 STEP=1
ITERATIONS 300
CONVERGE 0.00001
End

SYMMETRY  AUTO
CHARGE    0 0

ATOMS
PLACEHOLDERATOM
END


END INPUT
eor

filename=$(basename "$PBS_O_WORKDIR")
cp TAPE21 $PBS_O_WORKDIR/$filename.t21

